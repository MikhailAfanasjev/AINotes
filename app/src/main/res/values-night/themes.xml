    <style name="Theme.AINotes.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/appSurface</item>
        <item name="windowSplashScreenBackground">@color/appSurface</item>
        <item name="postSplashScreenTheme">@style/Theme.AINotes</item>
    </style>
</resources>